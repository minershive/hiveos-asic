				"T1Volt3": "319",
				"T1Volt4": "404",
				"T1Volt5": "404",
				"T1Volt6": "404",
				"T1Volt7": "404",
				"T1Volt8": "404",
				"T1VID1": "29",
				"T1VID2": "29",
