				"lyra2rev2-check-testnonce": true,
				"lyra2rev2-machine-type": "1",
				"lyra2rev2-scan-serial": "\/dev\/ttyS3",
				"lyra2rev2-restartenable": true,
				"lyra2rev2-cutoffenable": false,
				"lyra2rev2-fan": "LV1",
				"lyra2rev2-dynamic-frequency": true
