				"lyra2rev2-clk": "925",
				"lyra2rev2-asic-x": "4",
				"lyra2rev2-asic-y": "24",
				"lyra2rev2-asic-num": "50",
				"lyra2rev2-cutofftemperature": "50",
				"lyra2rev2-cutofffanspeedin": "100",
				"lyra2rev2-cutofffanspeedout": "100",
